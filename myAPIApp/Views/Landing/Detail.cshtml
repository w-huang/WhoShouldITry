
@{
    string[] champs = new string[3];
    string[] lolkingLinks = new string[3];
    for(int i = 0; i < 3; ++i)
    {
        champs[i] = @"http://ddragon.leagueoflegends.com/cdn/img/champion/loading/"+ ViewBag.ChampNames[i] + @"_0.jpg";
        lolkingLinks[i] = @"http://probuilds.net/champions/details/" + ViewBag.ChampNames[i];
    }
}
<html>
<body>

    <h2>Detail - @ViewBag.msg</h2>

    <h3>@ViewBag.Message</h3>
    <br />
    <table style="width:100%" align="center">
        <tr>
            <td align="center"><a href=@lolkingLinks[0]><img src="@champs[0]"/></a></td>
            <td align="center"><a href=@lolkingLinks[1]><img src="@champs[1]"/></a></td>
            <td align="center"><a href=@lolkingLinks[2]><img src="@champs[2]"/></a></td>
        </tr>
        <tr>
            <td align="center"><h4>@ViewBag.ChampRealNames[0]</h4></td>
            <td align="center"><h4>@ViewBag.ChampRealNames[1]</h4></td>
            <td align="center"><h4>@ViewBag.ChampRealNames[2]</h4></td>
        </tr>
    </table>

</body>
</html>

